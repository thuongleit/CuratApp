<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.avectris.curatapp.view.widget.MuliTextView
        android:id="@+id/text_connection_failed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:text="Connection failed"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.avectris.curatapp.view.widget.MuliTextView
        android:id="@+id/text_tap_to_retry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_connection_failed"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_horizontal"
        android:text="Tap to retry"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/text_tap_to_retry"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_image_button_network_error" />
</RelativeLayout>