<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.verify.VerifyActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_get_started"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/ic_logo" />

    <com.avectris.curatapp.view.widget.MuliTextView
        android:id="@+id/text_get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/get_started"
        android:textAllCaps="true"
        android:textColor="#404040"
        android:textSize="25sp"
        android:textStyle="bold" />

    <com.avectris.curatapp.view.widget.MuliTextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_get_started"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Please insert the Verification Code provided by your CuratApp Manager inside your email inbox."
        android:textColor="#9A9A9A"
        android:textSize="20sp" />

    <com.avectris.curatapp.view.widget.CustomBottomLineEditText
        android:id="@+id/input_verify_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Enter the verification code"
        android:imeOptions="actionDone"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/colorPrimary"
        android:textColorHint="#BABABA"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="22sp" />

    <com.avectris.curatapp.view.widget.MuliAppCompatButton
        android:id="@+id/button_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_verify_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:elevation="2dp"
        android:enabled="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:text="Verify"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</RelativeLayout>